{
  "name": "ptdoven-poc",
  "version": "1.0.0",
  "description": "PT Doven Tradeco Business Dashboard dengan OCR untuk Purchase Order",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "node test-ocr.js",
    "install-deps": "npm install",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/divinecoid/ptdoven-poc.git"
  },
  "keywords": [
    "electron",
    "ocr",
    "purchase-order",
    "business-dashboard",
    "google-generative-ai"
  ],
  "author": "PT Doven Tradeco",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/divinecoid/ptdoven-poc/issues"
  },
  "homepage": "https://github.com/divinecoid/ptdoven-poc#readme",
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@google/genai": "^1.12.0",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1"
  },
  "build": {
    "appId": "com.ptdoven.poc",
    "productName": "PT Doven Tradeco",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/page",
        "to": "page"
      }
    ]
  }
}
